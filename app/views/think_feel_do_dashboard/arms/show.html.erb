<h1>Arm <%= arm_type(@arm) %></h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to "Arms", arms_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_arm_path(@arm), class: "btn btn-default" %>
  <%= link_to "Destroy", arm_path(@arm), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>

<p>
  <strong>Name:</strong>
  <%= @arm.name %>
</p>

<p>
  <strong>Is social:</strong>
  <%= @arm.social? ? "Yes" : "No" %>
</p>

<p>
  <strong>Project:</strong>
  <%= @arm.project_id ? link_to(@arm.project_name, project_path(@arm.project)) : "None" %>
</p>

<%= form_for(@arm, html: { role: :form }, html: { style: "margin-bottom: 10px;" }) do |f| %>
  <%= f.hidden_field(:project_id, value: nil) %>
  <%= f.submit "Remove Project", class: "btn btn-default" %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Groups</h3>
  </div>
  <% if @arm.groups.count == 0 %>
    <div class="panel-body">
      None
    </div>
  <% else %>
    <%= render "think_feel_do_dashboard/groups/groups", groups: @arm.groups %>
  <% end %>
</div>