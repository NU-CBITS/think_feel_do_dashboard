<h1>Group <%= arm_type(ThinkFeelDoDashboard::ArmGroupJoin.where(group_id: @group.id).first.try(:arm)) %></h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to "Groups", groups_path, class: "btn btn-default" %>
  <%= link_to "Edit", edit_group_path(@group), class: "btn btn-default" %>
  <%= link_to "Destroy", group_path(@group), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>

<p>
  <strong>Title:</strong>
  <%= @group.title %>
</p>

<p>
  <strong>Arm:</strong>
  <%= @arm ? link_to(@arm.name, arm_path(@arm)) : "None" %>
</p>

<p>
  <%= (link_to "Remove Arm", arm_group_join_path(@arm.arm_group_joins.first), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default") if @arm %>
</p>

<p>
  <strong>Moderator:</strong>
  <%= @group.moderator ? @group.moderator.email : "None" %>
</p>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Participants</h3>
  </div>
  <% if @group.participants.count == 0 %>
    <div class="panel-body">
      None
    </div>
  <% else %>
    <div class="list-group">
      <% @group.participants.each do |participant| %>
        <%= link_to participant.email, participant_path(participant), class: "list-group-item clearfix" %>
      <% end %>
    </div>
  <% end %>
</div>