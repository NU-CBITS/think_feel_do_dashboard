<h1>Membership</h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to "Participant", participant_path(@membership.participant), class: "btn btn-default" %>
  <%= link_to "Edit", edit_participant_group_path(@membership.participant, @membership.group), class: "btn btn-default" %>
  <%= link_to "Destroy", participant_group_path(@membership.participant, @membership.group), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
</div>
<p>
  <strong>Group:</strong>
  <%= link_to @membership.group.title, group_path(@membership.group) %>
</p>
<p>
  <strong>Participant:</strong>
  <%= link_to @membership.participant.email, participant_path(@membership.participant) %>
</p>
<p>
  <strong>Display Name:</strong>
  <%= @membership.participant.display_name %>
</p>
<p>
  <strong>Membership Status:</strong>
  <%= membership_status @participant, @membership %>
</p>
<p>
  <strong>Start Date:</strong>
  <%= @membership.start_date %>
</p>
<p>
  <strong>End Date:</strong>
  <%= @membership.end_date %>
</p>

<dl class="dl-horizontal">
  <dt>Group:</dt>
  <dd><%= link_to @membership.group.title, group_path(@membership.group) %></dd>
  <dt>Participant:</dt>
  <dd><%= link_to @membership.participant.email, participant_path(@membership.participant) %></dd>
  <dt>Display Name:</dt>
  <dd><%= @membership.participant.display_name %></dd>
  <dt>Membership Status:</dt>
  <dd><%= membership_status @participant, @membership %></dd>
  <dt>Start Date:</dt>
  <dd><%= @membership.start_date %></dd>
  <dt>End Date:</dt>
  <dd><%= @membership.end_date %></dd>
</dl>