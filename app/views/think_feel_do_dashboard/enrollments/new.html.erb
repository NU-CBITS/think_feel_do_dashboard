<h1>Enrolling Participant</h1>

<%= form_tag(participant_enrollments_path(@participant), { role: :form }) do |f| %>
  <% if @membership.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong><%= pluralize(@membership.errors.count, "error") %> prohibited this group from being assigned to this participant:</strong>
      <ul>
      <% @membership.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @coach_assignment.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong><%= pluralize(@coach_assignment.errors.count, "error") %> prohibited this coach from being assigned to this participant:</strong>
      <ul>
      <% @coach_assignment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @participant.errors.any? %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <strong><%= pluralize(@participant.errors.count, "error") %> prohibited this display name from being saved for the participant:</strong>
      <ul>
      <% @participant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <strong>Participant:</strong>
    <%= @participant.email %>
  </p>
  <div class="form-group">
    <%= label_tag "membership[group_id]", "Group" %>
    <%= select_tag "membership[group_id]", grouped_options_for_select(@arm_group_join_options), { prompt: "Select Group", class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= label_tag "coach_assignment[coach_id]", "Coach" %>
    <%= select_tag "coach_assignment[coach_id]", options_for_select(@coaches_options), { prompt: "Select Coach" , class: "form-control", value: @coach_assignment.coach_id } %>
  </div>
  <div class="form-group">
    <%= label_tag "participant[display_name]", "Display Name" %>
    <%= text_field_tag "participant[display_name]", {}, class: "form-control", value: @participant.display_name %>
    <p class="help-block">Only necessary for enrollments where socializing is a feature of the arm.</p>
  </div>
  <div class="form-group">
    <%= label_tag "membership[start_date]", "Start Date" %>
    <%= text_field_tag "membership[start_date]", {}, type: :date, class: "form-control", value: Date.today %>
  </div>
  <div class="form-group">
    <%= label_tag "membership[end_date]", "End Date" %>
    <%= text_field_tag "membership[end_date]", {}, type: :date, class: "form-control", value: Date.today + 1.week %>
  </div>
  <div class="actions">
    <%= submit_tag "Enroll", class: "btn btn-primary" %>
    <%= link_to "Cancel", participant_path(@participant), class: "btn btn-default" %>
  </div>
<% end %>
