<h1>Users</h1>

<div class="btn-toolbar" role="toolbar">
  <% if can? :new, User %>
    <%= link_to "New", new_user_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="list-group">
  <% @users.each do |user| %>
    <%= link_to admin_status(user.is_admin) + user.email, user_path(user), class: "list-group-item clearfix" %>
  <% end %>
</div>
