<h1>Listing Arms</h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to "New", new_arm_path, class: "btn btn-default" %>
</div>

<div class="list-group">
  <% @arms.each do |arm| %>
    <%= link_to "#{arm.name} <span class=\"badge\">#{arm.groups.count}</span>".html_safe, arm_path(arm), class: "list-group-item clearfix" %>
  <% end %>
</div>