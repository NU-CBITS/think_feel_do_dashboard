<h1>Listing Assigned Groups</h1>

<div class="btn-toolbar" role="toolbar">
  <%= link_to "Participant", participant_path(@participant), class: "btn btn-default" %>
  <%= link_to "Assign Group", new_participant_group_path(@participant), class: "btn btn-default" %>
</div>

<div class="list-group">
  <% @participant.groups.each do |group| %>
    <%= link_to group.title, participant_group_path(@participant, group), class: "list-group-item" %>
  <% end %>
</div>